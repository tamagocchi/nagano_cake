<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <h3>会員一覧</h3>
    <table class="table">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer) %></td>
            <td><%= customer.email %></td>
            <td>
              <% if customer.is_deleted == false %>
              <p class="active_color">
                有効
              </p>
              <% else %>
              <p class="inactive_color">
                退会
              </p>
              <% end %>
            </td>
            </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>