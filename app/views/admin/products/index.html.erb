  <!----------- 管理者：商品一覧画面------------->

<div class="container">

  <div class="row">
    <div class="col-md-6 offset-md-1">
      <h5 class="d-inline-flex bg-light px-3 py-1 font-weight-bold mt-5 mb-4">商品一覧</h5>
    </div>
  </div>

 <div class="row">
  <div class="col-md-11 pl-5">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th class="text-left">商品ID</th>
          <th class="text-left">商品名</th>
          <th class="text-left">税込価格</th>
          <th class="text-left">ジャンル</th>
          <th class="text-left">ステータス</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.id %></td>
          <td><%= link_to product.name, admin_product_path(product.id) %></td>
          <td><%= product.tax_included_price.floor %></td>
          <td><%= Genre.find(product.genre_id).name %></td>
          <td class="is_active_color"><%= product.is_active_to_string %></td>
        </tr>
      <% end %>
     </tbody>
    </table>
  </div>
 </div>

</div>