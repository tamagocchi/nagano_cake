<div class="container">

  <div class="row">
    <div class="col-md-6 offset-md-1">
      <h5 class="d-inline-flex bg-light px-3 py-1 font-weight-bold mt-5">ジャンル一覧・追加</h5>
    </div>
  </div>

  <!----------- ジャンル追加------------->
  <div class="row">
    <div class="form-inline pl-5">
      <%= form_with model: [:admin, @genre], remote: true do |f| %>
        <div class="form-group col-md-12">
          <p class="ml-8">ジャンル名</p>
          <%= f.text_field :name, placeholder: "ジャンル", size: "30", class: "form-control ml-5 mt-5 mb-5", id: "genre-form" %>
          <%= f.submit '新規登録', class:"btn btn-sm btn-success ml-5" %>
        </div>
      <% end %>
    </div>
  </div>

<!----------- ジャンル一覧------------->
 <div class="row">
  <div class="col-md-5 pl-5">
    <table class="genre-list table">
      <thead class="thead-light">
        <tr>
          <th class="text-center">ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td>
            <p><%= genre.name %></p>
          </td>
          <td>
            <p>
            <%= link_to '編集', edit_admin_genre_path(genre.id), class: 'btn btn-sm btn-success' %>
            </p>
          </td>
        </tr>
      <% end %>
     </tbody>
    </table>
  </div>
 </div>
</div>