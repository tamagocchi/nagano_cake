<!----------- ジャンル変更------------->

<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-1">
      <h5 class="d-inline-flex bg-light px-3 py-1 font-weight-bold mt-5">ジャンル編集</h5>
    </div>
  </div>

  <div class="row">
    <div class="form-inline">
      <%= form_with model: [:admin, @genre], local: true do |f| %>
        <div class="form-group col-md-12">
          <p>ジャンル名</p>
          <%= f.text_field :name, placeholder: "ジャンル", size: "30", class: "form-control ml-5 mt-5 mb-5" %>
          <%= f.submit '変更を保存', class:"btn btn-sm btn-success ml-5" %>
        </div>
      <% end %>
    </div>
  </div>

</div>


