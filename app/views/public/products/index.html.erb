 <!----------- 管理者：商品詳細画面------------->
<div class="container ml-0">

  <div class="row">
    <div class="col-md-4 offset-md-2 mt-5 d-flex">
      <h1 class="mb-0">商品一覧</h1>
      <h5 class="mb-0 pt-3 ml-3">(全<%= @products.count %>件) </h5>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 offset-md-2 mt-5 card-group column">
      <% @products.each do |product| %>
        <div class="card border-0" style="width:20rem">
          <div class="card-img-top">
            <%= link_to (attachment_image_tag product, :image, :fill, 200, 200, format: 'jpeg'), product_path(product.id) %>
          </div>
          <div class="card-body">
            <div class="font-weight-bold">
              <%= product.name %>
            </div>
            <div>
              <p>￥<%= product.tax_included_price.floor %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 offset-md-2 mt-5 card-group column">
      <%= paginate @products %>
    </div>
  </div>

</div>