
<h3>注⽂情報確認</h3>

<table class="order_confirm">
        <thead>
            <tr>
                <th>商品名</th>
                <th>単価（税込み）</th>
                <th>数量</th>
                <th>小計</th>
            </tr>
        </thead>
    <% @addresses.each do |address| %>
        <tbody>
            <tr>
              <td><%= address.postcode %></td>
              <td><%= address.destination %>></td>
              <td><%= address.delivery_name %></td>
              <td><%= link_to '編集する', edit_addresess_path(address.id), class: 'btn btn-sm btn-success' %></td>
              <td><%= link_to '削除する', addresess_path(address.id), method: :delete, class: 'btn btn-sm btn-danger destroy_book_22227' %></td>
            </tr>
        </tbody>
    <% end %>
</table>

