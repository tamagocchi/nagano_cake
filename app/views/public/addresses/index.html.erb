<div class="container">

  <div class="row">
    <div class="col-md-9">
      <h5 class="d-inline-flex bg-light px-3 py-1 font-weight-bold mt-5">配送先登録/⼀覧</h5>
    </div>

  <table class="table table-borderless">
    <%= form_with model:@address, local:true do |f| %>
    <tbody>
      <tr>
        <th>郵便番号(ハイフンなし)</th>
        <td> <%= f.text_field :postcode, placeholder: "0000000" %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td> <%= f.text_field :destination, placeholder: "東京都渋⾕区代々⽊神園町0-0", :size =>"60" %></td>
      </tr>
      <tr>
        <th>宛名</th>
        <td><%= f.text_field :delivery_name, placeholder: "令和道⼦" %></td>
        <td><%= f.submit '新規登録', class:"btn btn-sm btn-success" %></td>
      </tr>
    </tbody>
    <% end %>
  </table>

  <div class="col-md-9">
    <table class="table table-bordered">
      <thead class="thead-light">
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postcode %></td>
          <td><%= address.destination %></td>
          <td><%= address.delivery_name %></td>
          <td><%= link_to '編集する', edit_address_path(address.id), class: 'btn btn-sm btn-success' %>
          <%= link_to '削除する', address_path(address.id), method: :delete, class: 'btn btn-sm btn-danger destroy_book_22227' %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

 </div>
