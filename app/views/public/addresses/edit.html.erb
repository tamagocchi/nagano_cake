<div class="container">

   <div class="row">
    <div class="col-md-9">
      <h5 class="d-inline-flex bg-light px-3 py-1 font-weight-bold mt-5">配送先編集</h5>
    </div>
  </div>

<%= form_with model: @address, local:true do |f| %>
 <table class="table table-borderless">
      <tbody>
        <tr>
          <th>郵便番号(ハイフンなし)</th>
          <td> <%= f.text_field :postcode %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td> <%= f.text_field :destination, :size =>"60" %></td>
        </tr>
        <tr>
          <th>宛名</th>
          <td><%= f.text_field :delivery_name %></td>
          <td><%= f.submit '変更内容を保存', class:"btn btn-sm btn-success" %></td>
        </tr>
      </tbody>
 　</table>
  <% end %>
</div>